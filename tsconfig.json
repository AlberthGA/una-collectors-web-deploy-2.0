{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/service": [
        "src/lib/service"
      ],
      "@/verify-token": [
        "src/lib/verify-token"
      ],
      "@/token-generator": [
        "src/lib/token-generator"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "*/.ts",
    "*/.tsx",
    ".next/types/*/.ts",
    ".next/types/**/*.ts"
  ],
  "types": [
    "node",
    "@types/dotenv"
  ],
  "exclude": [
    "node_modules"
  ]
}
